{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "VITE_API_URL": "https://backend-graphql-portfolio.onrender.com/graphql",
    "VITE_ENV": "production",
    "VITE_ENCRYPTION_KEY": "your-secure-production-encryption-key-2025"
  }
}
